<table class="center "  >
  <tr>
    <td class="background center large-font ">Please Login</td>
    <td></td>
    <td class="background center large-font ">New Customers</td>
  </tr>
  <tr valign="top" >
    <td width="350px" align="left" >
      <p>
        Existing customers please login to access your account or checkout.
      </p>
      <% form_tag "/users/login", :secure=>true do %>
        <p>
          <label for="email" >Email Address</label>
          <%= text_field_tag :email, params[:email] %>
        </p>
        <p>
          <label for="password" >Password</label>
          <%= password_field_tag :password, params[:password] %>
        </p>
        <p>
          <%= submit_tag "Login" %> <%= link_to "Forgot Password",forgot_path %>
        </p>

      <% end %>
    </td>
    <td>
      &nbsp;
    </td>
    <td width="450px" align="left" >
      <p>
        If this is the first time visiting our store, please create an account.
        By creating an account you'll enjoy fast checkouts,  review
        previous orders, and manage your shipping and billing information.
      </p>
      <p>
        <%= link_to "Create New Account", :controller=>"users",:action=>"new", :secure=>true %>
      </p>
    </td>
  </tr>
</table>
