<h1>Listing events</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Website</th>
    <th>Promoter</th>
    <th>Start date</th>
    <th>End date</th>
    <th>Location</th>
    <th>State</th>
    <th>Series</th>
    <th>Type</th>
    <th>Featured</th>
    <th>Logo path</th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%=h event.name %></td>
    <td><%=h event.website %></td>
    <td><%=h event.promoter %></td>
    <td><%=h event.start_date %></td>
    <td><%=h event.end_date %></td>
    <td><%=h event.location %></td>
    <td><%=h event.state %></td>
    <td><%=h event.series %></td>
    <td><%=h event.type %></td>
    <td><%=h event.featured %></td>
    <td><%=h event.logo_path %></td>
    <td><%= link_to 'Show', event %></td>
    <td><%= link_to 'Edit', edit_event_path(event) %></td>
    <td><%= link_to 'Destroy', event, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New event', new_event_path %>