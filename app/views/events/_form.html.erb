<fieldset style="display:inline">
  <legend>Add Race</legend>

<% form_for(@event) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name, "Name:" %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :website,"Website:"%>
    <%= f.text_field :website %>
  </p>
  <p>
    <%= f.label :promoter, "Promoter:" %>
    <%= f.text_field :promoter %>
  </p>
  <p>
    <%= f.label :start_date, "Date:" %>
    <%= f.text_field :start_date,:size=>11%>
  </p>
  <p>
    <%= f.label :end_date, "End Date:" %>
    <%= f.text_field :end_date,:size=>11%>
  </p>
  <p>
    <%= f.label :location,"Location:" %>
    <%= f.text_field :location %>
  </p>
  <p>
    <%= f.label :state,"State:"%>
    <%= f.select :state, state_list %>
  </p>
  <p>
    <%= f.label :event_type, "Event Type:"%>
    <%= f.select :event_type,options_for_select([["Cross Country"],["Endurnace"],["Cyclocross"],["Downhill"]]) %>
  </p>
  <p>
    
    <%= f.label :series, "Series?:" %>
    <%= f.check_box :series %> Is this event a series?
  </p>
  <p>

    <%= f.label :featured, "Featured?:" %>
    <%= f.check_box :featured %> Is this event featured?

  </p>
  
  
  <p>
    <%= f.label :logo_path,"Logo Path:" %>
    <%= f.file_field :logo_path %>
  </p>
  <p>
    <%= f.submit 'Save' %>
  </p>
<% end %>
</fieldset>

<h2>My Races</h2>
<table width="90%">
  <tr>
    <th>Race</th>
    <th>Type</th>
    <th>Date</th>
    <th>State</th>
  </tr>

  <%  @events.each do |event| %>
    <tr class="<%=cycle("white","gray") %>">
      <td><%= link_to event.name, edit_event_path(event)  %> </td>
      <td><%= event.event_type  %> </td>
      <td><%= event.start_date  %> </td>
      <td><%= event.state  %> </td>
    </tr>
  <%end%>
</table>

<script type="text/javascript">
  options = {
    showOn: 'button',
    buttonImage: '/images/icons/calendar.png',
    buttonImageOnly: true,
    dateFormat: 'yy-mm-dd',
    defaultDate: null,
    constrainInput: true,
    minDate: new Date()

  }
  // datepicker start_date
  $jq(function() {
    $jq("#event_start_date").datepicker(options);
  });

  $jq(function() {
    $jq("#event_end_date").datepicker(options);
  });

</script>