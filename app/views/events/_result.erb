<%= will_paginate @events %>


<table width="100%" xcellspacing="0" border="0" style="margin:0px;padding:0px">
  <tr >
    <th width="40%">Race</th>
    <th width="15%">Type</th>
    <th width="15%">Date</th>
    <th width="10%">State</th>
    <th width="20%">Rating</th>
  </tr>


  <% @events_by_month.each do |monthname, events| %>
    <tr>
      <td class="rounded" colspan="5" style="color:#ffffff;background-color: #333333;text-align: center" ><%=monthname%></td>
    </tr>
    <%  events.each do |event| %>
      <tr class="<%=cycle("white","gray") %>">
        <td class="title center"><%= link_to event.name, event_path(event)  %> </td>
        <td class="title center"><%= event.event_type  %> </td>
        <td class="title center"><%= event.start_date.strftime("%b %d")  %> </td>
        <td class="title center"><%= event.state  %> </td>
        <td class=""><div id="<%=event.id%>" avg="<%=event.avg_rating%>" user="<%=current_user_logged_in?%>" class="star"></div></td>
      </tr>
    <%end%>
  <%end%>
</table>

